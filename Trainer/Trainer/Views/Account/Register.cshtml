@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Trainer.Models.RegisterViewModel


<h2>@Localizer["UserReg"]</h2>
<div class="row">
    <div class="col">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a href="" data-target="#doctor" data-toggle="tab" class="nav-link active">@Localizer["Doctor"]</a>
            </li>
            <li class="nav-item">
                <a href="" data-target="#manager" data-toggle="tab" class="nav-link">@Localizer["Manager"]</a>
            </li>
        </ul>
    </div>
    <div class="col">
        
    </div>
</div>
<div class="tab-content py-4">
    <div class="tab-pane active" id="doctor">
        <div class="col-md-4">
            <form method="post" asp-controller="Doctor" asp-action="Register">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="form-label" asp-for="FirstName">@Localizer["FirstName"]</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="MiddleName">@Localizer["MiddleName"]</label>
                    <input asp-for="MiddleName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="LastName">@Localizer["LastName"]</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Email">@Localizer["Email"]</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Password">@Localizer["Password"]</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="ConfirmPassword">@Localizer["PasswordConfirm"]</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">@Localizer["BtnRegister"]</button>
            </form>
        </div>
    </div>
    <div class="tab-pane" id="manager">
        <div class="col-md-4">
            <form method="post" asp-controller="Manager" asp-action="Register">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="form-label" asp-for="FirstName">@Localizer["FirstName"]</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="MiddleName">@Localizer["MiddleName"]</label>
                    <input asp-for="MiddleName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="LastName">@Localizer["LastName"]</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Email">@Localizer["Email"]</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Password">@Localizer["Password"]</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="ConfirmPassword">@Localizer["PasswordConfirm"]</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">@Localizer["BtnRegister"]</button>
            </form>
        </div>
    </div>
</div>
